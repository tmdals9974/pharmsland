        <div class="container">
            <div class="sub-container">
                <section class="logo-container">
                    <i class="arrow left" onclick="move(-1)"></i>
                    <img name="logos" src="" alt="">
                    <img name="logos" src="" alt="">
                    <img name="logos" src="" alt="">
                    <img name="logos" src="" alt="">
                    <i class="arrow right" onclick="move(1)"></i>
                </section>
            </div>
        </div>
    </main>

    <script type="text/javascript" src="https://openapi.map.naver.com/openapi/v3/maps.js?ncpClientId=5r4jtvbejn"></script>
    <script>
        const logos = document.getElementsByName('logos');
        const logoLength = logos.length;
        const companys = ['3life', 'green', 'kirin', 'nasara', 'oralB', 'sewha', 'taeyang', 'taylor', 'wellbeing',
            'wellbeing2'
        ]
        let now = 0;

        document.addEventListener("DOMContentLoaded", function () {
            for (let index = 0; index < logoLength; index++) {
                logos[index].src = 'images/logo/' + companys[index] + '.jpg';
            }
        });

        function move(step) {
            if (now + step < 0 || (now + step + logoLength) == companys.length + 1) return;
            now += step;

            for (let index = 0; index < logoLength; index++) {
                logos[index].src = 'images/logo/' + companys[index + now] + '.jpg';
            }
        }

        const pharmsGPS = new naver.maps.LatLng(36.79015038247792, 127.17208649658916);
        var map = new naver.maps.Map('map', {
            center: pharmsGPS,
            zoom: 16,
            zoomControl: true,
        });

        var marker = new naver.maps.Marker({
            position: pharmsGPS,
            map: map
        });
    </script>
</body>

</html>