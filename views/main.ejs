        <%- include('emblems', { clients }); %>
    </main>

    <script type="text/javascript" src="https://openapi.map.naver.com/openapi/v3/maps.js?ncpClientId=5r4jtvbejn">
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setInterval(slide, 3000);
        });

        function slide() {
            const targetRadio = document.getElementById('pos1').checked ? document.getElementById('pos2') : document
                .getElementById('pos1');
            targetRadio.checked = true;
        }

        const pharmsGPS = new naver.maps.LatLng(36.79015038247792, 127.17208649658916);
        var map = new naver.maps.Map('map', {
            center: pharmsGPS,
            zoom: 16,
            zoomControl: true,
        });

        var marker = new naver.maps.Marker({
            position: pharmsGPS,
            map: map
        });
    </script>
</body>

</html>